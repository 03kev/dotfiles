{
  "title": "Keyboard Input Shortcuts",
  "rules": [  
  
    {
      "description": "Fn+1 to CTRL+OPT+SHIFT+1 (Italian)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "1",
            "modifiers": {
              "mandatory": [
                "fn"
              ]
            }
          },
          "to_after_key_up": [
            {
              "key_code": "1",
              "modifiers": [
                "left_shift",
                "left_option",
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    
