{
  "title": "Control+hjkl",
  "rules": [
    {
      "description": "Change control+hjkl to arrow keys",
      "manipulators": [
        {
          "from": {
            "key_code": "h",
            "modifiers": { "mandatory": ["control"] }
          },
          "to": [{ "key_code": "left_arrow" }],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.neovide\\.neovide$"
              ]
            }
          ]
        },
        {
          "from": {
            "key_code": "j",
            "modifiers": { "mandatory": ["control"] }
          },
          "to": [{ "key_code": "down_arrow" }],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.neovide\\.neovide$"
              ]
            }
          ]
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": { "mandatory": ["control"] }
          },
          "to": [{ "key_code": "up_arrow" }],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.neovide\\.neovide$"
              ]
            }
          ]
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": { "mandatory": ["control"] }
          },
          "to": [{ "key_code": "right_arrow" }],
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.neovide\\.neovide$"
              ]
            }
          ]
        }
      ]
    }
  ]
}
