{
  "title": "Right Command",
  "rules": [


    {
      "description": "Right Command Mapping V1",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_command"
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "rcommand pressed",
              "value": 1
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "set_variable": {
                "name": "rcommand pressed",
                "value": 1
              }
            },
            {
              "key_code": "left_command"
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "rcommand pressed",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": [
              {
                "set_variable": {
                  "name": "rcommand pressed",
                  "value": 0
                }
              }
            ]
          }
        }
      ]
    },


    {
      "description": "Right Command Mapping V2",
        "manipulators": [
          {
            "type": "basic",
            "from": {
              "key_code": "right_command",
              "modifiers": {
                "optional": [
                  "any"
                ]
              }
            },
            "to": [
              {
                "key_code": "right_command"
              }
            ],
            "conditions": [
              {
                "type": "variable_if",
                "name": "rcommand pressed",
                "value": 1
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "right_command",
              "modifiers": {
                "optional": [
                  "any"
                ]
              }
            },
  
            "to": [
              {
                "set_variable": {
                  "name": "rcommand pressed",
                  "value": 1
                }
              }
            ],
            "to_delayed_action": {
              "to_if_invoked": [
                {
                  "set_variable": {
                    "name": "rcommand pressed",
                    "value": 0
                  }
                }
              ],
              "to_if_canceled": [
                {
                  "set_variable": {
                    "name": "rcommand pressed",
                    "value": 0
                  }
                }
              ]
            },
            "parameters": {
              "basic.to_if_held_down_threshold_milliseconds": 150,
              "basic.to_delayed_action_delay_milliseconds": 200
            },
            "to_if_held_down": [
              {
                "set_variable": {
                  "name": "rcommand pressed",
                  "value": 0
                }
              },
              {
                "key_code": "left_command"
              }
            ]
          }
        ]
      }


  ]
}